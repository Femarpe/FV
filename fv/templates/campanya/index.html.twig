{% extends 'base.html.twig' %}

{% block title %}Mis campañas{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">📘 Mis campañas</h1>

    <a href="{{ path('crear_campanya') }}" class="btn btn-success mb-4">➕ Crear nueva campaña</a>

    {% if campanyas is empty %}
        <div class="alert alert-info">No tienes campañas creadas todavía.</div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for campanya in campanyas %}
                <div class="col">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">{{ campanya.nombre }}</h5>
                            <p class="card-text text-muted">{{ campanya.estadoActual }}</p>
                            <p class="card-text small">
                                {{ campanya.descripcion[:120] ~ '...' }}
                            </p>
                            <a href="{{ path('editar_campanya', { id: campanya.id }) }}" class="btn btn-primary btn-sm">✏️ Editar</a>
                            <a href="{{ path('eliminar_campanya', { id: campanya.id }) }}"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('¿Estás seguro de que quieres eliminar esta campaña?');">🗑️ Eliminar</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
