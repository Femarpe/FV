{% extends 'admin/base_admin.html.twig' %}

{% block title %}Confirmar borrado{% endblock %}

{% block body %}
<h1>⚠️ Confirmar eliminación del evento</h1>

<div class="alert alert-warning">
    <p><strong>Título:</strong> {{ evento.titulo }}</p>
    <p><strong>Fecha:</strong> {{ evento.fecha ? evento.fecha|date('Y-m-d') : 'Sin fecha' }}</p>
    <p><strong>Descripción:</strong> {{ evento.descripcion }}</p>
</div>

<form method="post" action="{{ path('admin_evento_borrar_confirmado', { id: evento.id }) }}">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('borrar_evento_' ~ evento.id) }}">
    <button type="submit" class="btn btn-danger">🗑️ Sí, borrar</button>
    <a href="{{ path('admin_eventos') }}" class="btn btn-secondary">⬅ Cancelar</a>
</form>
{% endblock %}
