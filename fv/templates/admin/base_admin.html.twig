<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Panel de Administración{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Raleway', sans-serif;
            margin: 0;
            overflow-x: hidden;
        }

        .sidebar {
            background-color: #198754;
            padding-top: 1rem;
            height: 100vh;
        }

        .sidebar .nav-link {
            color: white;
            font-weight: 500;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: #146c43;
            color: #fff;
        }

        #menu-toggle {
            position: fixed;
            top: 10px;
            left: 10px;
            background-color: #198754;
            border: none;
            padding: 8px 12px;
            border-radius: 4px;
            color: white;
            z-index: 1050;
        }

        @media (min-width: 768px) {
            #menu-toggle {
                display: none;
            }
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

<button id="menu-toggle" class="d-md-none"><i class="bi bi-list"></i></button>

<div class="container-fluid">
    <div class="row min-vh-100">
        <!-- Sidebar -->
        <nav id="sidebar" class="col-md-2 d-md-block bg-success sidebar collapse d-md-flex flex-column text-white p-3">
            <h4 class="text-white">🔧 Admin</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="{{ path('admin_personajes') }}">👤 Personajes</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="{{ path('admin_campanyas') }}">📘 Campañas</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="{{ path('admin_eventos') }}">📅 Eventos</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="{{ path('admin_usuarios') }}">👥 Usuarios</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" href="{{ path('landing') }}">🐉 Inicio front</a>
                </li>
                <li class="nav-item mt-4">
                    <a class="nav-link text-white" href="{{ path('logout') }}">🔓 Cerrar sesión</a>
                </li>
            </ul>
        </nav>

        <!-- Main -->
        <main class="col-md-10 ms-sm-auto px-md-4 py-4">
            {% block body %}{% endblock %}
        </main>
    </div>
</div>

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggle = document.getElementById('menu-toggle');
        const sidebar = document.getElementById('sidebar');

        if (toggle && sidebar) {
            toggle.addEventListener('click', () => {
                sidebar.classList.toggle('show');
            });
        }
    });
</script>
{% endblock %}
</body>
</html>

