<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}FantasyVerse{% endblock %}</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;600&display=swap" rel="stylesheet">

    <!-- Estilos Globales -->
    <style>
        /* Estilo General */
        body {
            font-family: 'Raleway', sans-serif;
            background-color: #F0F0F0;
            display: flex;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #1D3557;
            /* Azul Prusia */
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
        }

        .sidebar img {
            width: 120px;
            margin-bottom: 20px;
            border-radius: 10px;
        }

        .sidebar .nav-link {
            color: white;
            font-size: 18px;
            padding: 10px 15px;
            width: 100%;
            text-align: center;
            transition: 0.3s;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: #457B9D;
            /* Azul m√°s claro */
        }

        .sidebar .btn {
            width: 80%;
            margin-top: 15px;
        }

        .nav-link.active {
            background-color: #457B9D !important;
            /* Azul m√°s claro */
            font-weight: bold;
        }

        /* Contenido Principal */
        .content {
            margin-left: 270px;
            width: calc(100% - 270px);
            padding: 20px;
            overflow-y: auto;
        }
        

        .log-boton {

            color: black !important;
            background-color: #00ff66;
            font-weight: bold;
            margin-top: 1em;

        }

        .logout-boton {

            color: black !important;
            background-color: #771414;
            font-weight: bold;
            margin-top: 1em;

        }

        #context-menu,
        #evento-menu {
            position: fixed;
            left: 50%;
            top: 200px;
            transform: translateX(-50%);
            background: white;
            border: 1px solid #ccc;
            padding: 8px;
            z-index: 9999;
            display: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 4px;
        }

        #context-menu button,
        #evento-menu button {
            display: block;
            width: 100%;
            background: none;
            border: none;
            padding: 5px 10px;
            text-align: left;
            cursor: pointer;
        }

        #context-menu button:hover,
        #evento-menu button:hover {
            background-color: #f1f1f1;
        }
        
    </style>

    {% block stylesheets %}{% endblock %}
</head>

<body>
    {% if is_granted('ROLE_USER') %}
    <!-- Sidebar -->
    <nav class="sidebar">
        <img src="/images/logo_FV.png" alt="FantasyVerse Logo">
        <ul class="nav flex-column w-100">
            <li class="nav-item">
                <a class="nav-link {% if app.request.get('_route') == 'landing' %}active{% endif %}"
                    href="{{ path('landing') }}">üêâInicio</a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link {% if app.request.get('_route') == 'perfil_usuario' %}active{% endif %}"
                    href="{{ path('perfil_usuario') }}">üë§ Mi Perfil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if app.request.get('_route') == 'ver_personajes' %}active{% endif %}"
                    href="{{ path('ver_personajes') }}">üó°Ô∏è Personajes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if app.request.get('_route') == 'campanya_index' %}active{% endif %}"
                    href="{{ path('campanya_index') }}">üé≤ Campa√±as</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if app.request.get('_route') == 'calendario_index' %}active{% endif %}"
                    href="{{ path('calendario_index') }}">üìÖ Calendario</a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
                <a class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}"
                    href="{{ path('admin_dashboard') }}">üìäBackoffice</a>
            </li>
            {% endif %}

            <li class="nav-item">
                <form method="post" action="/logout">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                    <button class="nav-link logout-boton" type="submit">üîí Cerrar sesi√≥n</button>
                </form>
            </li>

        </ul>
    </nav>
    {% endif %}

    <!-- Contenido Principal -->
    {% if is_granted('ROLE_USER') %}
    <main class="content">
    {% else %}
    <main class="flex-column w-100">
    {% endif %}
            {% block body %}{% endblock %}
    </main>
    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}{% endblock %}
</body>

</html>