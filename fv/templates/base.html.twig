<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}FantasyVerse{% endblock %}</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Raleway', sans-serif;
            background-color: #F0F0F0;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background-color: #1D3557;
            color: white;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
            position: fixed;
            height: 100%;
            transition: transform 0.3s ease;
            z-index: 1000;
        }

        .sidebar img {
            width: 120px;
            margin-bottom: 20px;
            border-radius: 10px;
        }

        .sidebar .nav-link {
            color: white;
            font-size: 18px;
            padding: 10px 15px;
            width: 100%;
            text-align: center;
            transition: 0.3s;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: #457B9D;
        }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .log-boton {
            color: black !important;
            background-color: #00ff66;
            font-weight: bold;
            margin-top: 1em;
        }

        .logout-boton {
            color: black !important;
            background-color: #771414;
            font-weight: bold;
            margin-top: 1em;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                position: absolute;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .content {
                margin-left: 0;
                padding: 1rem;
            }

            #menu-toggle {
                display: block;
                position: fixed;
                top: 10px;
                left: 10px;
                z-index: 1100;
                background-color: #1D3557;
                color: white;
                border: none;
                padding: 8px 12px;
                border-radius: 4px;
            }
        }

        #context-menu, #evento-menu {
            position: fixed;
            left: 50%;
            top: 200px;
            transform: translateX(-50%);
            background: white;
            border: 1px solid #ccc;
            padding: 8px;
            z-index: 9999;
            display: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 4px;
        }

        #context-menu button, #evento-menu button {
            display: block;
            width: 100%;
            background: none;
            border: none;
            padding: 5px 10px;
            text-align: left;
            cursor: pointer;
        }

        #context-menu button:hover, #evento-menu button:hover {
            background-color: #f1f1f1;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

{% if is_granted('ROLE_USER') %}
<button id="menu-toggle" class="d-md-none"><i class="bi bi-list"></i></button>

<nav class="sidebar d-md-flex flex-column" id="sidebar">
    <img src="/images/logo_FV.png" alt="FantasyVerse Logo">
    <ul class="nav flex-column w-100">
        <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'landing' %}active{% endif %}" href="{{ path('landing') }}">üêâInicio</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'perfil_usuario' %}active{% endif %}" href="{{ path('perfil_usuario') }}">üë§ Mi Perfil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'ver_personajes' %}active{% endif %}" href="{{ path('ver_personajes') }}">üó°Ô∏è Personajes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'campanya_index' %}active{% endif %}" href="{{ path('campanya_index') }}">üé≤ Campa√±as</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'calendario_index' %}active{% endif %}" href="{{ path('calendario_index') }}">üìÖ Calendario</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item">
            <a class="nav-link {% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}" href="{{ path('admin_dashboard') }}">üìä Backoffice</a>
        </li>
        {% endif %}
        <li class="nav-item">
            <form method="post" action="/logout">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                <button class="nav-link logout-boton" type="submit">üîí Cerrar sesi√≥n</button>
            </form>
        </li>
    </ul>
</nav>
{% endif %}

<main class="{% if is_granted('ROLE_USER') %}content{% else %}container py-4{% endif %}">
    {% block body %}{% endblock %}
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggleBtn = document.getElementById('menu-toggle');
        const sidebar = document.getElementById('sidebar');
        if (toggleBtn && sidebar) {
            toggleBtn.addEventListener('click', () => {
                sidebar.classList.toggle('active');
            });
        }
    });
</script>
{% block javascripts %}{% endblock %}
</body>
</html>
