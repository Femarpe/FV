{% extends 'base.html.twig' %}

{% block title %}Mis personajes{% endblock %}

{% block body %}
    <h1>👤 Mis personajes</h1>

    <a href="{{ path('personaje_crear') }}">➕ Crear nuevo personaje</a>

    <ul>
        {% for personaje in personajes %}
            <li>
                <strong>{{ personaje.nombre }}</strong>
                — CA: {{ personaje.ca }}
                <a href="{{ path('personaje_show', { id: personaje.id }) }}">🔍 Ver</a>
                <a href="{{ path('personaje_editar', { id: personaje.id }) }}">✏️ Editar</a>
            </li>
        {% else %}
            <li>No tienes personajes creados aún.</li>
        {% endfor %}
    </ul>
{% endblock %}
